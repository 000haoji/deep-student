{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Deep Student",
  "version": "0.4.0",
  "identifier": "com.deep-student.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1422",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Deep Student",
        "width": 1200,
        "height": 980,
        "minWidth": 1200,
        "minHeight": 980,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "decorations": false,
        "transparent": false,
        "skipTaskbar": false,
        "alwaysOnTop": false,
        "visible": true,
        "dragDropEnabled": true
      }
    ],
    "security": {
      "csp": null
    },
    "withGlobalTauri": false
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "category": "Education",
    "copyright": "",
    "shortDescription": "AI驱动的智能学习助手",
    "longDescription": "Deep Student - 使用AI技术帮助学生深度学习和分析错题的智能教育工具",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico",
      "icons/icon.png"
    ]
  },
  "plugins": {
    "dialog": {
      "all": true,
      "ask": true,
      "confirm": true,
      "message": true,
      "open": true,
      "save": true
    }
  }
}

# Application
APP_NAME="Problem Analysis System"
APP_ENV=development
APP_DEBUG=true
APP_PORT=8000

# Database
DATABASE_URL=postgresql+asyncpg://problem_user:problem_pass@localhost:5432/problem_analysis
DATABASE_ECHO=false

# Redis
REDIS_URL=redis://localhost:6379/0

# JWT
JWT_SECRET_KEY=your-secret-key-here-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=1440

# MinIO
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_SECURE=false
MINIO_BUCKET_NAME=problem-images

# Elasticsearch
ELASTICSEARCH_URL=http://localhost:9200

# Celery
CELERY_BROKER_URL=amqp://rabbit:rabbit123@localhost:5672//
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# AI API Keys
OPENAI_API_KEY=your-openai-api-key
OPENAI_API_URL=https://api.openai.com/v1

GEMINI_API_KEY=your-gemini-api-key
GEMINI_API_URL=https://generativelanguage.googleapis.com/v1beta

DEEPSEEK_API_KEY=your-deepseek-api-key
DEEPSEEK_API_URL=https://api.deepseek.com/v1

CLAUDE_API_KEY=your-claude-api-key
CLAUDE_API_URL=https://api.anthropic.com/v1

# 阿里云配置
ALIYUN_ACCESS_KEY_ID=your-aliyun-access-key-id
ALIYUN_ACCESS_KEY_SECRET=your-aliyun-access-key-secret
QWEN_API_KEY=your-qwen-api-key
QWEN_API_URL=https://dashscope.aliyuncs.com/compatible-mode/v1

# CORS
CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173"]

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# File Upload
MAX_UPLOAD_SIZE=10485760  # 10MB
ALLOWED_EXTENSIONS=["png", "jpg", "jpeg", "gif", "pdf"]

# AI Analysis
DEFAULT_AI_MODEL=gpt-4-vision-preview
AI_REQUEST_TIMEOUT=30
AI_MAX_RETRIES=3

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_DEFAULT="100 per hour"

# Fernet加密密钥（用于AI模型API密钥加密，必须为32字节base64字符串）
AI_ENCRYPTION_KEY=请用Fernet.generate_key()生成 